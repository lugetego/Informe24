{% extends 'base.html.twig' %}

{% block main %}


    <div class="container-fluid">
    <div class="row">
        <!-- Tecnicos -->
        <div class="col-xl-12 col-sm-12 col-md-12 mt-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Inicio</a></li>
                    <li class="breadcrumb-item active">Informe de Actividades y Plan de trabajo</li>
                </ol>
            </nav>

            {{ form_start(edit_form) }}

            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-informe-tab" data-toggle="pill" href="#pills-informe" role="tab" aria-controls="pills-informe" aria-selected="true">Informe de Actividades</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-plan-tab" data-toggle="pill" href="#pills-plan" role="tab" aria-controls="pills-plan" aria-selected="false">Plan de trabajo</a>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-informe" role="tabpanel" aria-labelledby="pills-informe-tab">
                    <div class="form-group ">
                        <div>
                            <p>Teclee la informaci칩n relacionada a sus actividades realizadas en el a침o {{ actual }}</p>
                        </div>
                        <div>
                            {% if enviado == false  %}
                                {{ form_widget(edit_form.informeAnual,{'attr': {'class': 'form-control input-sm', 'placeholder':'Informe de Actividades', 'rows':'20'} } ) }}
                            {% else %}
                                {{ form_widget(edit_form.informeAnual,{'attr': {'class': 'form-control input-sm', 'placeholder':'Informe de Actividades', 'rows':'20', 'disabled':true } } ) }}
                            {% endif %}
                        </div>
                        <div>{{ form_errors(edit_form.informeAnual) }}</div>
                    </div>
                </div>
                <div class="tab-pane fade" id="pills-plan" role="tabpanel" aria-labelledby="pills-plan-tab">
                    <div class="form-group ">
                        <div>
                            <p>Teclee la informaci칩n relacionada a sus actividades, cursos y tesistas para el a침o {{ siguiente }}</p>
                        </div>
                        <div>
                            {% if enviado == false  %}
                                {{ form_widget(edit_form.plan,{'attr': {'class': 'form-control input-sm', 'placeholder':'Plan de trabajo', 'rows':'20'} } ) }}
                            {% else %}
                                {{ form_widget(edit_form.plan,{'attr': {'class': 'form-control input-sm', 'placeholder':'Plan de trabajo', 'rows':'20', 'disabled':true } } ) }}
                            {% endif %}
                        </div>
                        <div>{{ form_errors(edit_form.plan) }}</div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    {% if enviado == false  %}
        <div class="row">
            <div class="col-lg-12 text-right ">
                <input type="submit" value="Guardar cambios"  class="btn btn-primary"/>
                {{ form_end(edit_form) }}
            </div>
        </div>
    {% endif %}


{% endblock %}