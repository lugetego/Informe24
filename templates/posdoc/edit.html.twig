{% form_theme edit_form 'form_errors.html.twig' %}

{{ form_start(edit_form, {'action': path('posdoc_edit', { 'id': id})}) }}

<form>
    <div class="form-row">
        <div class="form-group col-md-8">
            <div>
                <label for="formNombre"> {{ form_label(edit_form.nombre) }} </label>
                {{ form_widget(edit_form.nombre,{'attr': {'class': 'form-control input-sm', 'placeholder':'Nombre del posdoctorante'} } ) }}
            </div>
            <div>{{ form_errors(edit_form.nombre) }}</div>
        </div>
        <div class="form-group col-md-4">
            <div>
                <label class="text-info" for="formPages">
                    {{ form_label(edit_form.programa) }}
                </label>
                {{ form_widget(edit_form.programa,{'attr': {'class': 'form-control input-sm', 'placeholder':'Programa'} } ) }}
            </div>
            <div>{{ form_errors(edit_form.programa) }}</div>
        </div>

        <div class="form-group col-md-6">
            <div>{{ form_label(edit_form.inicio) }}</div>
            <div class="form-row">
                <div class="col-lg-4" >{{ form_widget(edit_form.inicio.day, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                <div class="col-lg-4" >{{ form_widget(edit_form.inicio.month, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                <div class="col-lg-4" >{{ form_widget(edit_form.inicio.year, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                <div>{{ form_errors(edit_form.inicio) }}</div>
            </div>
        </div>
        <div class="form-group col-md-6">
            <div>{{ form_label(edit_form.fin) }}</div>
            <div class="form-row">
                <div class="col-lg-4" >{{ form_widget(edit_form.fin.day, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                <div class="col-lg-4" >{{ form_widget(edit_form.fin.month, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                <div class="col-lg-4" >{{ form_widget(edit_form.fin.year, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                <div>{{ form_errors(edit_form.fin) }}</div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
        {{ form_end(edit_form) }}

    </div>
</form>