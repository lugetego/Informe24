{% extends 'dash/index.html.twig' %}

{% block main %}

    <div class="container-fluid">
    <div class="row">
    <!-- Otros -->
    <div class="col-xl-10 col-sm-12 col-md-10 mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">Inicio</a></li>
            <li class="breadcrumb-item active">Plan de trabajo {{ siguiente }}</li>
        </ol>
    </nav>

    {{ form_start(edit_form) }}

    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="pills-productividad-tab" data-toggle="pill" href="#pills-productividad" role="tab" aria-controls="pills-productividad" aria-selected="true">Productividad primaria</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-estudiantes-tab" data-toggle="pill" href="#pills-estudiantes" role="tab" aria-controls="pills-estudiantes" aria-selected="false">Tesistas</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-posdocs-tab" data-toggle="pill" href="#pills-posdocs" role="tab" aria-controls="pills-posdocs" aria-selected="false">Posdoctorantes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-cursos-tab" data-toggle="pill" href="#pills-cursos" role="tab" aria-controls="pills-cursos" aria-selected="false">Cursos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-proyectos-tab" data-toggle="pill" href="#pills-proyectos" role="tab" aria-controls="pills-proyectos" aria-selected="false">Proyectos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-eventos-tab" data-toggle="pill" href="#pills-eventos" role="tab" aria-controls="pills-eventos" aria-selected="false">Eventos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-visitantes-tab" data-toggle="pill" href="#pills-visitantes" role="tab" aria-controls="pills-visitantes" aria-selected="false">Visitantes</a>
        </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-productividad" role="tabpanel" aria-labelledby="pills-productividad-tab">
        <div class="form-group ">
            <div>
                <p>Teclee la información relacionada a la Productividad primaria para el año {{ siguiente }}</p>
            </div>
            <div>
                {% if enviado == false  %}
                    {{ form_widget(edit_form.investigacion,{'attr': {'class': 'form-control input-sm', 'placeholder':'Investigación', 'rows':'20'} } ) }}
                {% else %}
                    {{ form_widget(edit_form.investigacion,{'attr': {'class': 'form-control input-sm', 'placeholder':'Investigación', 'rows':'20', 'disabled':true } } ) }}
                {% endif %}
            </div>
            <div>{{ form_errors(edit_form.investigacion) }}</div>
        </div>

    </div>
    <div class="tab-pane fade" id="pills-estudiantes" role="tabpanel" aria-labelledby="pills-estudiantes-tab">
