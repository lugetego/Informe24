{% form_theme form 'form_errors.html.twig' %}

{{ form_start(form, {'action': path('otros_new')}) }}



<form>
    <div class="form-row">
        <div class="col-lg-12">
            <div class="form-group">

                <div>
                    {{ form_widget(form.actividad,{'attr': {'class': 'form-control input-sm', 'placeholder':'Otra actividad','rows' : '6' } } ) }}
                </div>
                <div>{{ form_errors(form.actividad) }}</div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
        {{ form_end(form) }}
    </div>
</form>
